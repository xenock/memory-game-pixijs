{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 4],
    "no-console": 1,
    "no-var": 2,
    "no-cond-assign": ["error", "always"]
  },
  "root": true,
  "globals": {
    "wp": true
  },
  "env": {
    "amd": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint"
}
